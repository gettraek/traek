{
	"extends": ["../../tsconfig.base.json"],
	"include": ["src/**/*", "*.ts"],
	"exclude": ["node_modules", "dist", "**/*.stories.svelte"],
	"compilerOptions": {
		"rewriteRelativeImportExtensions": true,
		"allowJs": true,
		"checkJs": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true
	}
}
