{
	"name": "traek",
	"version": "0.0.3",
	"description": "Spatial tree-chat UI for AI agents (Svelte 5)",
	"author": "Nico HÃ¼lscher",
	"license": "MIT",
	"type": "module",
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"scripts": {
		"watch": "svelte-kit sync && svelte-package -w",
		"build": "svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"lint": "prettier --check . && eslint .",
		"clean": "rm -rf node_modules dist .svelte-kit coverage build .turbo",
		"format": "prettier --write . && eslint . --fix",
		"test:unit": "vitest run",
		"test": "vitest run"
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"dependencies": {
		"@iconify/svelte": "^5.2.1",
		"dompurify": "^3.3.1",
		"highlight.js": "^11.11.1",
		"marked": "^17.0.1",
		"marked-highlight": "^2.2.3",
		"zod": "^4.3.6"
	},
	"devDependencies": {
		"@eslint/compat": "2.0.2",
		"@eslint/js": "9.39.2",
		"@sveltejs/kit": "^2.50.2",
		"@sveltejs/package": "^2.5.7",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@testing-library/svelte": "^5.3.1",
		"@types/node": "^24",
		"@vitest/coverage-v8": "^4.0.18",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "10.1.8",
		"eslint-plugin-svelte": "3.14.0",
		"globals": "17.3.0",
		"jsdom": "^28.1.0",
		"mdsvex": "^0.12.6",
		"prettier": "^3.8.1",
		"prettier-plugin-svelte": "^3.4.1",
		"publint": "^0.3.17",
		"svelte": "^5.49.2",
		"svelte-check": "^4.3.6",
		"typescript": "^5.9.3",
		"typescript-eslint": "8.54.0",
		"vite": "^7.3.1",
		"vitest": "^4.0.18"
	},
	"keywords": [
		"svelte",
		"svelte5",
		"ai",
		"chat",
		"agent",
		"tree",
		"conversation"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/gettraek/traek.git"
	}
}
